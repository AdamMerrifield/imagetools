{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__fixtures__/**", 
    "**/__tests__/**", 
    "examples/**", 
    ".github/**",
    "docs/**",
    "**/CHANGELOG.md",
    "**/package.json"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "createRelease": "github",
      "yes": true,
      "message": "chore(release): publish %s [skip ci]"
    }
  }
}
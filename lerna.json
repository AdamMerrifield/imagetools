{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "examples/**", ".github/**", "docs/**"],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "createRelease": "github",
      "yes": true
    }
  }
}